<div class="card padding-lg">
  <div class="card-title row">
    <div class="col s8">
      <h5 class="center margin-top-xlg">Mantenimiento Preventivo de Equipo Movil</h5>
    </div>
    <div class="col s4">
      <%= image_tag("payloader.png", height: "150px") %>
    </div>
  </div>
