  <div class="row">
    <%= form_for @equipo, :html => {class: 'col s12'} do |f| %>
        <div class="row">
          <div class="input-field col s6 offset-s3">
            <%= f.text_field :nombre, :class => 'validate' %>
            <%= f.label :nombre, "Nombre del Equipo" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s3 offset-s3">
            <%= f.text_field :m1, :class => 'validate', :typ => 'number' %>
          </div>
          <div class="input-field col s6">
            <%= f.label :m1, "Duracion de M1 (En minutos)" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s3 offset-s3">
            <%= f.text_field :m2, :class => 'validate', :typ => 'number' %>
          </div>
          <div class="input-field col s6">
            <%= f.label :m1, "Duracion de M2 (En minutos)" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s3 offset-s3">
            <%= f.text_field :m3, :class => 'validate', :typ => 'number' %>
          </div>
          <div class="input-field col s6">
            <%= f.label :m3, "Duracion de M3 (En minutos)" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s3 offset-s3">
            <%= f.text_field :m4, :class => 'validate', :typ => 'number' %>
          </div>
          <div class="input-field col s6">
            <%= f.label :m4, "Duracion de M4 (En minutos)" %>
          </div>
        </div>
        <br><br>
        <div class="row">
          <div class="col s6 center">
            <%= link_to "Regresar al menu", root_path , class: 'waves-effect waves-teal btn-flat' %>
          </div>
          <div class="col s6 center">
            <button class="btn waves-effect waves-light" type="submit" name="action">AÃ±adir</button>
          </div>
        </div>
    <% end %>
  </div>
</div>